@inherits LayoutComponentBase

<nav class="bg-gray-900 border-b border-gray-600">
  <div class="mx-auto max-w-7xl px-2">
    <div class="relative flex h-16 justify-between">
      <div class="flex">
        <div class="flex shrink-0 items-center">
          <img class="h-8 w-auto" src="https://tailwindui.com/plus/img/logos/mark.svg?color=indigo&shade=500"
            alt="Your Company">
        </div>
      </div>
      <div class="flex items-center">
        <div class="ml-10 flex items-baseline space-x-4">
          @foreach (var link in navLinks)
          {
            <a href="@link.Href"
              class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">@link.Text</a>
          }
        </div>
      </div>
    </div>
  </div>
</nav>

<div class="bg-gray-900 min-h-[91.5vh]">
  <div class="mx-auto max-w-7xl ">
    @Body
  </div>
</div>

@code {
  private List<(string Text, string Href)> navLinks = new List<(string Text, string Href)>
{
("Progress", "/"),
("All Decks", "/decks"),
};
}
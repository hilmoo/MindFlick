@using flashcard.Data
@inject FlashCardService FlashCardService
<a href="/d/@DeckData?.Slug" class="block p-6 border rounded-lg shadow bg-neutral hover:bg-opacity-90">
    <div class="flex flex-col h-[10rem] gap-2">
        <div class="flex grow flex-col gap-5">
            <div class="flex sm:flex-row flex-col sm:items-center justify-between">
                <p class="text-lg font-semibold ">@DeckData?.Title</p>
                <p class="text-sm text-gray-400">@DeckData?.Category</p>
            </div>
            <p class="text-sm line-clamp-3">@DeckData?.Description</p>
        </div>
        <div class="flex justify-between">
            <p class="text-sm truncate">Author: @author</p>
            <p class="text-sm truncate">@DeckData?.TotalQuestion Question</p>
        </div>
    </div>
</a>